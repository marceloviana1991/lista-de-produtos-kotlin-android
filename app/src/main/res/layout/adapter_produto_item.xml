<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/text_view_nome_adapter_produto_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Nome do produto" />

    <TextView
        android:id="@+id/text_view_descricao_adapter_produto_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_nome_adapter_produto_item"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Descrição do produto" />

    <TextView
        android:id="@+id/text_view_valor_adapter_produto_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_descricao_adapter_produto_item"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Valor do produto" />


</androidx.constraintlayout.widget.ConstraintLayout>